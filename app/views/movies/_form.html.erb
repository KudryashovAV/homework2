<% if @movie.errors.any? %>
  <div>
    <h2>There were errors!</h2>
    <p><%= @movie.errors.full_messages.to_sentence %></p>
  </div>
<% end %>

<%= form_for @movie do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :rating %>
  <%= f.select(:rating, ['G','PG','PG-13','R', 'NC-17']) %>

  <%= f.label :release_date %>
  <%= f.text_field :release_date %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.label :avatar %>
  <%= f.file_field :avatar %>
  
  <%= f.submit "Submit" %>
<% end %>


